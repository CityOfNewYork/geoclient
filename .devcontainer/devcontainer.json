{
	"name": "geoclient",
	"image": "mcr.microsoft.com/devcontainers/java:17",
	"forwardPorts": ["8080:8080", "8000:8000","5005:5005"],
	"containerEnv": {
		"GEOFILES": "/opt/geosupport/current/fls/"
	},
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17",
			"installMaven": "true",
			"installGradle": "true"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "none"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"java.import.gradle.java.home": "/usr/local/sdkman/candidates/java/current",
				"java.configuration.runtimes": [
					{
						"default": true,
						"name": "JavaSE-17",
						"path": "/usr/local/sdkman/candidates/java/current"
					}
				]
			},
			"extensions": [
                          "42Crunch.vscode-openapi",
                          "aaron-bond.better-comments",
                          "DavidAnson.vscode-markdownlint",
                          "donjayamanne.githistory",
                          "DotJoshJohnson.xml",
                          "eamodio.gitlens",
                          "foxundermoon.shell-format",
                          "GitHub.github-vscode-theme",
                          "GitHub.vscode-pull-request-github",
                          "humao.rest-client",
                          "joaompinto.vscode-graphviz",
                          "mechatroner.rainbow-csv",
                          "mhutchie.git-graph",
                          "ms-azure-devops.azure-pipelines",
                          "ms-vscode.azure-account",
                          "ms-vscode.azurecli",
                          "naco-siren.gradle-language",
                          "redhat.fabric8-analytics",
                          "redhat.java",
                          "redhat.vscode-commons",
                          "redhat.vscode-xml",
                          "redhat.vscode-yaml",
                          "richardwillis.vscode-gradle-extension-pack",
                          "richardwillis.vscode-spotless-gradle",
                          "shd101wyy.markdown-preview-enhanced",
                          "spmeesseman.vscode-taskexplorer",
                          "VisualStudioExptTeam.intellicode-api-usage-examples",
                          "VisualStudioExptTeam.vscodeintellicode",
                          "vmware.vscode-boot-dev-pack",
                          "vmware.vscode-spring-boot",
                          "vscjava.vscode-gradle",
                          "vscjava.vscode-java-debug",
                          "vscjava.vscode-java-dependency",
                          "vscjava.vscode-java-pack",
                          "vscjava.vscode-java-test",
                          "vscjava.vscode-maven",
                          "vscjava.vscode-spring-boot-dashboard",
                          "vscjava.vscode-spring-initializr",
                          "vscodevim.vim",
                          "yzhang.markdown-all-in-one"
                        ]
		}
	},
	"mounts": [
		"source=geosupport-23c_23.3,target=/opt/geosupport,type=volume"
	],
	"onCreateCommand": "apt-get update && export DEBIAN_FRONTEND=noninteractive && apt-get -y install --no-install-recommends gcc g++ libc6-dev ;",
	"postCreateCommand": "/opt/geosupport/current/bin/geosupport install",
	"remoteUser": "root"
}
